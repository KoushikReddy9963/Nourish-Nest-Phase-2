    <script>
        function showSidebar() {
            const sidebar = document.querySelector('.sidebar');
            sidebar.style.display = sidebar.style.display === 'flex' ? 'none' : 'flex';
        }
        function hideSidebar() {
            const sidebar = document.querySelector('.sidebar');
            sidebar.style.display = 'none';
        }

        let a = document.getElementById('clock');

        setInterval(() => {
            let date = new Date();
            let h = date.getHours();
            let m = date.getMinutes();
            let s = date.getSeconds();
            let time = "<p><span>" + h + " : " + m + " : " + s + "</span><br>";

            if (h >= 0 && h <= 10) {
                time += "<span>Good Morning!  Plan for BreakFast</span>";
            } else if (h >= 11 && h <= 15) {
                time += "<span>Good Afternoon!  Plan for Lunch</span>";
            } else if (h >= 16 && h <= 23) {
                time += "<span>Good Evening! Plan for Dinner</span>";
            }

            time += "</p>";

            a.innerHTML = time;

        }, 1000);

        var slideIndex = 1;
        showSlides(slideIndex);

        function plusSlides(n) {
            showSlides(slideIndex += n);
        }

        function currentSlide(n) {
            showSlides(slideIndex = n);
        }

        function showSlides(n) {
            let i;
            const slides = document.getElementsByClassName("mySlides");
            const dots = document.getElementsByClassName("dot");
            if (n > slides.length) { slideIndex = 1; }
            if (n < 1) { slideIndex = slides.length; }
            for (i = 0; i < slides.length; i++) {
                slides[i].style.display = "none";
            }
            for (i = 0; i < dots.length; i++) {
                dots[i].className = dots[i].className.replace(" active", "");
            }
            slides[slideIndex - 1].style.display = "block";
            dots[slideIndex - 1].className += " active";
        }
        // Get all the buttons and boxes
        const buttons = document.querySelectorAll('.buttons');
        const boxes = document.querySelectorAll('.box');

        // Add click event listeners to the buttons
        buttons.forEach(button => {
            button.addEventListener('click', () => {
                // Remove the 'active' class from all buttons
                buttons.forEach(btn => btn.classList.remove('active'));

                // Add the 'active' class to the clicked button
                button.classList.add('active');

                // Get the filter value from the clicked button
                const filter = button.dataset.filter;

                // Hide all boxes initially
                boxes.forEach(box => box.style.display = 'none');

                // If the filter is 'all', show all boxes
                if (filter === 'all') {
                    boxes.forEach(box => box.style.display = 'block');
                } else {
                    // Otherwise, show only the boxes that match the filter
                    const filteredBoxes = document.querySelectorAll(`.box.${filter}`);
                    filteredBoxes.forEach(box => box.style.display = 'block');
                }
            });
        });
